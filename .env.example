# QFLARE Environment Configuration
# Copy this content to your .env file

# Server Configuration
SECRET_KEY=your_super_secret_key_here_change_this_in_production
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Database Configuration (if using)
DATABASE_URL=sqlite:///./qflare.db

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379

# PQC Configuration
PQC_ALGORITHM=FrodoKEM-640-AES
SIGNATURE_ALGORITHM=Dilithium2

# Federated Learning Configuration
FL_AGGREGATION_INTERVAL=600
FL_MAX_CLIENTS=10

# Enclave Configuration
ENCLAVE_ENABLED=true
ENCLAVE_POISON_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/qflare.log