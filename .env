# QFLARE Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Settings
ENVIRONMENT=production
QFLARE_JWT_SECRET=mfxA4UbvREXepsirN9jy8uY57hVqWnwCk3atdo1zPZMODgTH0GSFJ2cQlIB6LK
QFLARE_SGX_MODE=SIM
QFLARE_LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///data/qflare_prod.db

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# Security Settings
SSL_CERT_PATH=/etc/ssl/certs/qflare.crt
SSL_KEY_PATH=/etc/ssl/private/qflare.key
ENABLE_SSL=false

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true

# FL Configuration
DEFAULT_FL_ALGORITHM=fedavg
MIN_PARTICIPANTS=3
MAX_ROUND_TIME=3600
MODEL_VALIDATION_ENABLED=true

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/qflare.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# External Services
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_RETENTION_TIME=30d

# Docker Settings
COMPOSE_PROJECT_NAME=qflare-prod
DOCKER_BUILDKIT=1
