{
  "version": 2,
  "builds": [
    {
      "src": "server/vercel_app.py",
      "use": "@vercel/python",
      "config": {
        "requirements": "requirements-vercel-simple.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/vercel_app.py"
    }
  ],
  "env": {
    "HOST": "0.0.0.0",
    "PORT": "8000"
  }
} 